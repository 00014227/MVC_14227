@model IEnumerable<_14227_MVC.Models.Author>

<h2>Authors</h2>

<p>
    <a asp-action="Create">Create New Author</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Biography</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>@author.Biography</td>
                <td>
                    <a asp-action="Details" asp-route-id="@author.AuthorId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@author.AuthorId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@author.AuthorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
