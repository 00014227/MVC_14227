@model IEnumerable<_14227_MVC.Models.Book>

<h2>Books</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Book</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Published Date</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.PublishedDate.ToString("yyyy-MM-dd")</td>
                <td>@book.Author?.Name</td> <!-- Assumes the Author property has a Name field -->
                <td>
                    <a asp-action="Details" asp-route-id="@book.BookId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@book.BookId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@book.BookId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
