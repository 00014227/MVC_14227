@model _14227_MVC.Models.Book


<h2>Book Details</h2>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Published Date</dt>
        <dd class="col-sm-10">@Model.PublishedDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.Author?.Name</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BookId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>